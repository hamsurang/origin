{
  "name": "origin",
  "private": true,
  "scripts": {
    "clean:branch": "git fetch --prune && git branch | grep -v '^*' | xargs git branch -D",
    "clean:cache": "turbo run clean",
    "build:activity": "turbo run build --filter=activity",
    "build:home": "turbo run build --filter=home",
    "build:web": "turbo run build --filter=web",
    "dev:activity": "turbo run dev --filter=activity",
    "dev:home": "turbo run dev --filter=home",
    "dev:web": "turbo run dev --filter=home --filter=activity --filter=web --parallel --continue",
    "lint:activity": "turbo run lint --filter=activity",
    "lint:home": "turbo run lint --filter=home",
    "lint:web": "turbo run lint --filter=web",
    "format": "turbo format",
    "prepare": "husky",
    "preinstall": "corepack enable"
  },
  "devDependencies": {
    "@biomejs/biome": "1.7.3",
    "@hamsurang/typescript-config": "workspace:*",
    "husky": "^9.0.11",
    "nano-staged": "^0.8.0",
    "turbo": "^1.13.0",
    "typescript": "5.5.0-beta"
  },
  "packageManager": "pnpm@9.1.0",
  "engines": {
    "node": "20.13.0"
  }
}
